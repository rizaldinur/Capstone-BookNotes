    <style>
      * {
        margin: 0;
        padding: 0;
      }
      body {
        background: none;
        min-height: 100vh;
      }

      header {
        display: flex;
        padding: 20px 0;
        align-items: center;
        background-color: seagreen;
      }
      #web-title {
        text-decoration: none;
      }
      #web-title:link,
      #web-title:visited {
        color: beige;
      }
      .searchForm {
        display: flex;
        width: 100%;
      }
      .searchbox {
        width: 100%;
        padding: 10px;
        font-size: 17px;
        border: 1px solid grey;
        outline: none;
        background: #f1f1f1;
      }

      .icon {
        width: 50px;
        padding: 10px;
        background: #2196f3;
        color: white;
        font-size: 17px;
        border: 1px solid grey;
        border-left: none;
        cursor: pointer;
      }
      .box {
        height: 200px;
        background-color: #2196f3;
      }

      .search-column {
        display: none;
      }
      .btn-search {
        display: none;
        background: none;
        border: none;
      }

      .suggestions {
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        background-color: #fff;
        max-height: 1000px;
        overflow-y: auto;
        z-index: 1000;
        list-style: none;
        padding: 0;
        margin: 0;
      }
      .search-result {
        background: none;
        border: none;
      }
      .page-btn {
        width: 100px;
        cursor: pointer;
      }

      .page-btn:disabled {
        cursor: not-allowed;
        opacity: 0.5;
      }
      @media (max-width: 768px) {
        .hide {
          display: none;
        }
        .btn-search {
          display: block;
        }
      }
    </style>
  </head>
