    <meta name="msapplication-TileColor" content="#ffffff" />
    <meta name="msapplication-TileImage" content="ms-icon-144x144.png" />
    <meta name="theme-color" content="#ffffff" />
    <title>Book Notes</title>
    <link rel="stylesheet" href="styles/main.css" />
    <link rel="stylesheet" href="styles/book.css" />
    <link rel="stylesheet" href="styles/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
  </head>
  <body class="bg-body">
    <header class="shadow-sm bg-success">
      <div class="container-md">
        <div
          class="d-flex flex-md-nowrap flex-wrap justify-content-between align-items-center py-4"
        >
          <h1 class="m-0">
            <a id="web-title" class="link-light" href="/">Book Notes</a>
          </h1>
          <div
            class="search-container col-5 d-flex justify-content-end position-relative p-0"
          >
            <form class="searchForm hide" action="/search-book" method="get">
              <div class="input-group">
                <input
                  type="text"
                  class="searchbox form-control"
                  placeholder="Enter book title, author name,or isbn..."
                  name="search"
                  autocomplete="off"
                  required
                />
                <button type="submit" class="icon btn btn-primary">
                  <i class="fa fa-search"></i>
                </button>
              </div>
            </form>
            <form id="book-search" action="/book" method="get"></form>
            <div class="suggestions list-group"></div>
            <button
              id="mobile-btn-search"
              class="btn btn-success rounded-circle"
            >
              <i id="togglerIcon" class="fa fa-search"></i>
            </button>
          </div>
          <button
            class="btn btn-success rounded-circle themeToggler"
            role="button"
          >
            <i class="fa fa-moon-o themeTogglerIcon" aria-hidden="true"></i>
          </button>
          <div
            id="mobile-search-container"
            class="search-container col-12 position-relative p-0 mt-1"
          >
            <form class="searchForm" action="/search-book" method="get">
              <div class="input-group">
                <input
                  type="text"
                  class="searchbox form-control"
                  placeholder="Enter book title, author name,or isbn..."
                  name="search"
                  autocomplete="off"
                  required
                />
                <button type="submit" class="icon btn btn-primary">
                  <i class="fa fa-search"></i>
                </button>
              </div>
            </form>
            <div class="suggestions list-group"></div>
          </div>
        </div>
      </div>
    </header>
    <button id="scrollButton" class="btn btn-outline-primary rounded-circle">
      <i class="fa fa-angle-double-up fa-lg" aria-hidden="true"></i>
    </button>
  </body>
</html>
